@model IEnumerable<BibliotecaApp.Models.Reserva>
@{
    ViewData["Title"] = "Gestión de Reservas";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="display-6">Reservas Activas</h1>
    <a asp-action="Create" class="btn btn-primary">
        <i class="fas fa-plus me-2"></i>Nueva Reserva
    </a>
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="fas fa-check-circle me-2"></i> @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="table-responsive">
    <table class="table table-striped table-hover">
        <thead class="table-dark">
            <tr>
                <th>Libro</th>
                <th>Solicitante</th>
                <th>Fecha Reserva</th>
                <th>Vencimiento</th>
                <th>Estado</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Libro?.Titulo</td>
                    <td>@item.Solicitante</td>
                    <td>@item.FechaReserva.ToShortDateString()</td>
                    <td>@item.FechaVencimiento.ToShortDateString()</td>
                    <td>
                        <span class="badge bg-@(item.Estado == "Activa" ? "warning" : item.Estado == "Completada" ? "success" : "secondary")">
                            @item.Estado
                        </span>
                    </td>
                    <td>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info" title="Detalles">
                            <i class="fas fa-eye"></i>
                        </a>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning" title="Editar">
                            <i class="fas fa-edit"></i>
                        </a>

                        @if (item.Estado == "Activa")
                        {
                            <form asp-action="Completar" method="post" class="d-inline">
                                <input type="hidden" name="id" value="@item.Id" />
                                <button type="submit" class="btn btn-sm btn-success" title="Completar">
                                    <i class="fas fa-check"></i>
                                </button>
                            </form>

                            <form asp-action="Cancelar" method="post" class="d-inline">
                                <input type="hidden" name="id" value="@item.Id" />
                                <button type="submit" class="btn btn-sm btn-danger" title="Cancelar">
                                    <i class="fas fa-times"></i>
                                </button>
                            </form>
                        }

                        <form asp-action="Delete" method="post" class="d-inline">
                            <input type="hidden" name="id" value="@item.Id" />
                            <button type="submit" class="btn btn-sm btn-danger" title="Eliminar"
                                    onclick="return confirm('¿Estás seguro de eliminar esta reserva?')">
                                <i class="fas fa-trash"></i>
                            </button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@if (!Model.Any())
{
    <div class="alert alert-info">
        <i class="fas fa-info-circle me-2"></i>No se encontraron reservas.
    </div>
}