@model IEnumerable<BibliotecaApp.Models.Prestamo>

@{
    ViewData["Title"] = "Préstamos Atrasados";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="display-6">
        <i class="fas fa-exclamation-triangle text-danger me-2"></i>Préstamos Atrasados
    </h1>
    <a asp-action="Index" class="btn btn-secondary">
        <i class="fas fa-arrow-left me-2"></i>Volver a Préstamos
    </a>
</div>

@if (!Model.Any())
{
    <div class="alert alert-success">
        <i class="fas fa-check-circle me-2"></i>¡Excelente! No hay préstamos atrasados.
    </div>
}
else
{
    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead class="table-dark">
                <tr>
                    <th>Libro</th>
                    <th>Solicitante</th>
                    <th>Fecha Préstamo</th>
                    <th>Devolución Estimada</th>
                    <th>Días de Atraso</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    var diasAtraso = (DateTime.Today - item.FechaDevolucionEstimada).Days;
                    <tr>
                        <td>@item.Libro?.Titulo</td>
                        <td>@item.Solicitante</td>
                        <td>@item.FechaPrestamo.ToShortDateString()</td>
                        <td>@item.FechaDevolucionEstimada.ToShortDateString()</td>
                        <td class="text-danger fw-bold">@diasAtraso días</td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-primary">
                                <i class="fas fa-edit"></i>
                            </a>
                            <form asp-action="Devolver" method="post" class="d-inline">
                                <input type="hidden" name="id" value="@item.Id" />
                                <button type="submit" class="btn btn-sm btn-success">
                                    <i class="fas fa-check"></i> Devolver
                                </button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}