@model IEnumerable<BibliotecaApp.Models.Prestamo>
@{
    ViewData["Title"] = "Gestión de Préstamos";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="display-6">Préstamos Activos</h1>
    <div>
        <a asp-action="Create" class="btn btn-primary me-2">
            <i class="fas fa-plus me-2"></i>Nuevo Préstamo
        </a>
        <a asp-action="ReporteAtrasados" class="btn btn-danger">
            <i class="fas fa-exclamation-triangle me-2"></i>Ver Atrasados
        </a>
    </div>
</div>

<!-- Filtros -->
<form asp-action="Index" method="get" class="row mb-4">
    <div class="col-md-4">
        <select name="estadoFiltro" class="form-select" onchange="this.form.submit()">
            @foreach (var item in ViewBag.Estados as List<SelectListItem>)
            {
                <option value="@item.Value" selected="@(item.Value == ViewBag.EstadoSeleccionado)">@item.Text</option>
            }
        </select>
    </div>
</form>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="fas fa-check-circle me-2"></i> @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="table-responsive">
    <table class="table table-striped table-hover">
        <thead class="table-dark">
            <tr>
                <th>Libro</th>
                <th>Solicitante</th>
                <th>Fecha Préstamo</th>
                <th>Devolución Estimada</th>
                <th>Devolución Real</th>
                <th>Estado</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Libro?.Titulo</td>
                    <td>@item.Solicitante</td>
                    <td>@item.FechaPrestamo.ToShortDateString()</td>
                    <td>@item.FechaDevolucionEstimada.ToShortDateString()</td>
                    <td>@(item.FechaDevolucionReal?.ToShortDateString() ?? "Pendiente")</td>
                    <td>
                        <span class="badge bg-@(item.Estado == "Activo" ? "success" : item.Estado == "Devuelto" ? "secondary" : "danger")">
                            @item.Estado
                        </span>
                    </td>
                    <td>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info" title="Detalles">
                            <i class="fas fa-eye"></i>
                        </a>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning" title="Editar">
                            <i class="fas fa-edit"></i>
                        </a>

                        @if (item.Estado == "Activo" || item.Estado == "Atrasado")
                        {
                            <form asp-action="Devolver" method="post" class="d-inline">
                                <input type="hidden" name="id" value="@item.Id" />
                                <button type="submit" class="btn btn-sm btn-success" title="Devolver">
                                    <i class="fas fa-check"></i>
                                </button>
                            </form>
                        }

                        <form asp-action="Delete" method="post" class="d-inline">
                            <input type="hidden" name="id" value="@item.Id" />
                            <button type="submit" class="btn btn-sm btn-danger" title="Eliminar"
                                    onclick="return confirm('¿Estás seguro de eliminar este préstamo?')">
                                <i class="fas fa-trash"></i>
                            </button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@if (!Model.Any())
{
    <div class="alert alert-info">
        <i class="fas fa-info-circle me-2"></i>No se encontraron préstamos.
    </div>
}